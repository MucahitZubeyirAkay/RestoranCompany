@model List<UserModel>
@{
    ViewData["Title"] = "KULLANICILAR";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me2"></i>Yeni Kullanıcı Ekle</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>KullanıcıAdı</th>
                    <th>KilitliAçık</th>
                    <th>TelefonNo</th>
                    <th>Epostası</th>
                    <th>Oluşturulma Zamanı</th>
                    <th>Rol</th>
                    <th></th>


                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                        <tr>
                                <td>@user.Adi</td>
                                <td>@user.Soyadi</td>
                                <td>@user.Username</td>
                                <td>
                            @if (user.Locked)
                            {
                                            <i class="fa fa-lock text-danger"></i>
                            }
                            else
                            {
                                            <i class="fa fa-lock-open text-success"></i>
                            }
                                </td>
                                    <td>@user.TelNoSu</td>
                                    <td>@user.Epostasi</td>
                                    <td>@user.Createdate</td>
                                <td>@user.Role</td>       
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('@user.Username Bu kaydı silmek istediğinizden emin misiniz?')" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Sil</a>
                                </td>

                        </tr>
                }

            </tbody>
        </table>
    </div>
</div>