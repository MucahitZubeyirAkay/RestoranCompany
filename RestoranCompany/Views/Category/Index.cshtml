@model List<CategoryViewModel>
@using RestoranCompany.Entity
@{
    ViewData["Title"] = "KATEGORİLER";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me2"></i>Kategori Ekle</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>KategoriAdı</th>
                    <th>KategoriAçıklaması</th>
                    <th>Kategoriye Ait Ürünler</th>


                </tr>
            </thead>
            <tbody>
                @foreach (CategoryViewModel kategori in Model)
                {
                            <tr>
                                    <td>@kategori.Id</td>
                                    <td>@kategori.KategoriAdi</td>
                                    <td>@kategori.KategoriAciklamasi</td>
                                    <td><a href="/Kategori/Urun/@kategori.Id" class="btn btn-warning">Ürünler</a></td>
                                        
                                       <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@kategori.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@kategori.Id" onclick="return confirm('@kategori.KategoriAdi Bu kaydı silmek istediğinizden emin misiniz?')" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Sil</a>
                                    </td>

                            </tr>
                }

            </tbody>
        </table>
    </div>
</div>