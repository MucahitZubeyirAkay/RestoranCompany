@model EditCategoryModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class=" row"> 
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2 "> @ViewData["Title"]</h1>
    </div>

</div>


<div class=" row">
    <div class="col-4 offset-4">       
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="KategoriAdi" class="form-label">Username </label>
                <input asp-for="KategoriAdi" class="form-control" placeholder="Kahvaltılar" />
                <span asp-validation-for="KategoriAdi" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KategoriAciklamasi" class="form-label">Ad </label>
                <input asp-for="KategoriAciklamasi" class="form-control" placeholder="mucahit" />
                <span asp-validation-for="KategoriAciklamasi" class="text-danger small"></span>
            </div>


            <div class="form-group mb-3">
                <button type ="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
            </div>
        </form>

    </div>
</div>

